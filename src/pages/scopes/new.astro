---
import Layout from "../../components/Layout.astro";
import { getUser } from "../../lib/auth";

// Check authentication
const user = await getUser(Astro.request);

if (!user) {
  return Astro.redirect('/api/auth/login');
}
---

<Layout title="Add New Scope – AstroN00b">
  <div class="scope-form-container">
    <h1>Add New Scope</h1>
    
    <form id="scope-form" class="scope-form">
      <div class="form-group">
        <label for="name">Scope Name *</label>
        <input 
          type="text" 
          id="name" 
          name="name" 
          required 
          placeholder="e.g., My Backyard Dish"
        />
      </div>

      <div class="form-row">
        <div class="form-group">
          <label for="latitude">Latitude (°) *</label>
          <input 
            type="number" 
            id="latitude" 
            name="latitude" 
            step="0.000001" 
            min="-90" 
            max="90" 
            required
            placeholder="e.g., 40.7128"
          />
        </div>

        <div class="form-group">
          <label for="longitude">Longitude (° East) *</label>
          <input 
            type="number" 
            id="longitude" 
            name="longitude" 
            step="0.000001" 
            min="-180" 
            max="180" 
            required
            placeholder="e.g., -74.0060"
          />
        </div>
      </div>

      <div class="form-group">
        <label for="dishSize">Dish Diameter *</label>
        <div class="unit-input">
          <input 
            type="number" 
            id="dishSize" 
            name="dishSize" 
            step="any"
            min="0.1" 
            required
            placeholder="Enter size"
          />
          <select id="dishUnit" name="dishUnit">
            <option value="mm">mm</option>
            <option value="inches">inches</option>
          </select>
        </div>
        <small>Enter the diameter of your dish antenna</small>
      </div>

      <div class="form-actions">
        <button type="submit" class="button primary">Create Scope</button>
        <a href="/dashboard" class="button secondary">Cancel</a>
      </div>

      <div id="form-error" class="error-message" style="display: none;"></div>
      <div id="form-success" class="success-message" style="display: none;"></div>
    </form>
  </div>
</Layout>

<style>
  .scope-form-container {
    max-width: 600px;
    margin: 0 auto;
  }

  .scope-form {
    background: var(--bg-secondary, rgba(255, 255, 255, 0.05));
    padding: 2rem;
    border-radius: 8px;
  }

  .form-group {
    margin-bottom: 1.5rem;
  }

  .form-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1rem;
  }

  .form-group label {
    display: block;
    margin-bottom: 0.5rem;
    font-weight: 600;
    color: var(--an-cyan, #69f5ff);
  }

  .form-group input,
  .form-group select {
    width: 100%;
    padding: 0.75rem;
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 4px;
    background: rgba(0, 0, 0, 0.2);
    color: var(--an-white, #e7e6e2);
    font-size: 1rem;
    font-family: inherit;
  }

  .form-group input:focus,
  .form-group select:focus {
    outline: none;
    border-color: var(--an-cyan, #69f5ff);
  }

  .form-group small {
    display: block;
    margin-top: 0.25rem;
    font-size: 0.85rem;
    opacity: 0.7;
  }

  .unit-input {
    display: flex;
    gap: 0.5rem;
  }

  .unit-input input {
    flex: 1;
  }

  .unit-input select {
    width: 100px;
  }

  .form-actions {
    display: flex;
    gap: 1rem;
    margin-top: 2rem;
  }

  .button {
    padding: 0.75rem 1.5rem;
    border: none;
    border-radius: 4px;
    font-size: 1rem;
    font-weight: 600;
    cursor: pointer;
    text-decoration: none;
    display: inline-block;
    text-align: center;
    transition: background 0.2s;
  }

  .button.primary {
    background: var(--an-pink, #ff2dbe);
    color: white;
  }

  .button.primary:hover {
    background: #e01ba5;
  }

  .button.secondary {
    background: rgba(255, 255, 255, 0.1);
    color: var(--an-white, #e7e6e2);
  }

  .button.secondary:hover {
    background: rgba(255, 255, 255, 0.2);
  }

  .error-message {
    padding: 1rem;
    margin-top: 1rem;
    background: rgba(220, 53, 69, 0.2);
    border: 1px solid #dc3545;
    border-radius: 4px;
    color: #ff6b7a;
  }

  .success-message {
    padding: 1rem;
    margin-top: 1rem;
    background: rgba(40, 167, 69, 0.2);
    border: 1px solid #28a745;
    border-radius: 4px;
    color: #6fdc8c;
  }

  @media (max-width: 600px) {
    .form-row {
      grid-template-columns: 1fr;
    }
  }
</style>

<script>
  const form = document.getElementById('scope-form') as HTMLFormElement;
  const errorDiv = document.getElementById('form-error');
  const successDiv = document.getElementById('form-success');

  form?.addEventListener('submit', async (e) => {
    e.preventDefault();

    if (errorDiv) errorDiv.style.display = 'none';
    if (successDiv) successDiv.style.display = 'none';

    const formData = new FormData(form);
    const data = {
      name: formData.get('name'),
      latitude: formData.get('latitude'),
      longitude: formData.get('longitude'),
      dishSize: formData.get('dishSize'),
      dishUnit: formData.get('dishUnit'),
    };

    try {
      const response = await fetch('/api/scopes', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify(data),
      });

      const result = await response.json();

      if (response.ok) {
        if (successDiv) {
          successDiv.textContent = 'Scope created successfully! Redirecting...';
          successDiv.style.display = 'block';
        }
        setTimeout(() => {
          window.location.href = '/dashboard';
        }, 1000);
      } else {
        if (errorDiv) {
          errorDiv.textContent = result.error || 'Failed to create scope';
          errorDiv.style.display = 'block';
        }
      }
    } catch (error) {
      console.error('Error:', error);
      if (errorDiv) {
        errorDiv.textContent = 'Network error. Please try again.';
        errorDiv.style.display = 'block';
      }
    }
  });
</script>

