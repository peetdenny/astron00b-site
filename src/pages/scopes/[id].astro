---
import Layout from "../../components/Layout.astro";
import { getUser } from "../../lib/auth";

// Check authentication
const user = await getUser(Astro.request);

if (!user) {
  return Astro.redirect('/api/auth/login');
}

const { id } = Astro.params;
---

<Layout title="Scope Details – AstroN00b">
  <div class="scope-container">
    <div class="scope-header">
      <h1 id="scope-name">Loading...</h1>
      <div class="scope-actions">
        <button id="edit-btn" class="button primary" style="display: none;">Edit</button>
        <button id="cancel-edit-btn" class="button secondary" style="display: none;">Cancel</button>
        <a href="/dashboard" class="button secondary">Back to Dashboard</a>
      </div>
    </div>
    
    <div id="node-status" class="node-status" style="display: none;">
      <div class="status-indicator">
        <span class="status-dot" id="status-dot"></span>
        <span id="status-text" class="status-text"></span>
      </div>
    </div>
    
    <div id="loading">Loading scope...</div>
    
    <!-- View Mode: Scope Details -->
    <div id="scope-details" class="scope-details" style="display: none;">
      <div class="detail-section">
        <h2>Location</h2>
        <div class="detail-grid">
          <div class="detail-item">
            <label>Latitude</label>
            <p id="detail-latitude">-</p>
          </div>
          <div class="detail-item">
            <label>Longitude</label>
            <p id="detail-longitude">-</p>
          </div>
          <div class="detail-item">
            <label>Country</label>
            <p id="detail-country">-</p>
          </div>
        </div>
      </div>
      
      <div class="detail-section">
        <h2>Specifications</h2>
        <div class="detail-grid">
          <div class="detail-item">
            <label>Dish Diameter</label>
            <p id="detail-dish-size">-</p>
          </div>
        </div>
      </div>
      
      <div class="detail-section" id="heartbeat-section" style="display: none;">
        <h2>Status</h2>
        <div class="detail-grid">
          <div class="detail-item">
            <label>Current Run</label>
            <p id="detail-run-info">-</p>
          </div>
          <div class="detail-item">
            <label>Last Capture</label>
            <p id="detail-last-capture">-</p>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Edit Mode: Form -->
    <form id="scope-form" class="scope-form" style="display: none;">
      <div class="form-group">
        <label for="name">Scope Name *</label>
        <input 
          type="text" 
          id="name" 
          name="name" 
          required 
          placeholder="e.g., My Backyard Dish"
        />
      </div>

      <div class="form-row">
        <div class="form-group">
          <label for="latitude">Latitude (°) *</label>
          <input 
            type="number" 
            id="latitude" 
            name="latitude" 
            step="0.000001" 
            min="-90" 
            max="90" 
            required
          />
        </div>

        <div class="form-group">
          <label for="longitude">Longitude (° East) *</label>
          <input 
            type="number" 
            id="longitude" 
            name="longitude" 
            step="0.000001" 
            min="-180" 
            max="180" 
            required
          />
        </div>
      </div>

      <div class="form-group">
        <label for="dishSize">Dish Diameter *</label>
        <div class="unit-input">
          <input 
            type="number" 
            id="dishSize" 
            name="dishSize" 
            step="any"
            min="0.1" 
            required
          />
          <select id="dishUnit" name="dishUnit">
            <option value="mm">mm</option>
            <option value="inches">inches</option>
          </select>
        </div>
        <small>Enter the diameter of your dish antenna</small>
      </div>

      <div class="form-actions">
        <button type="submit" class="button primary">Save Changes</button>
        <button type="button" id="cancel-form-btn" class="button secondary">Cancel</button>
      </div>

      <div id="form-error" class="error-message" style="display: none;"></div>
      <div id="form-success" class="success-message" style="display: none;"></div>
    </form>
  </div>
</Layout>

<style>
  .scope-container {
    max-width: 800px;
    margin: 0 auto;
  }

  .scope-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 2rem;
    flex-wrap: wrap;
    gap: 1rem;
  }

  .scope-header h1 {
    margin: 0;
    font-size: 2rem;
  }

  .scope-actions {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  .node-status {
    background: var(--bg-secondary, rgba(255, 255, 255, 0.05));
    padding: 1rem 1.5rem;
    border-radius: 8px;
    margin-bottom: 1.5rem;
  }

  .status-indicator {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .status-dot {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    display: inline-block;
    flex-shrink: 0;
  }

  .status-dot.green {
    background-color: #28a745;
    box-shadow: 0 0 8px rgba(40, 167, 69, 0.6);
  }

  .status-dot.yellow {
    background-color: #ffc107;
    box-shadow: 0 0 8px rgba(255, 193, 7, 0.6);
  }

  .status-dot.red {
    background-color: #dc3545;
    box-shadow: 0 0 8px rgba(220, 53, 69, 0.6);
  }

  .status-text {
    color: var(--an-white, #e7e6e2);
    font-size: 1rem;
  }

  .scope-details {
    background: var(--bg-secondary, rgba(255, 255, 255, 0.05));
    padding: 2rem;
    border-radius: 8px;
  }

  .detail-section {
    margin-bottom: 2rem;
  }

  .detail-section:last-child {
    margin-bottom: 0;
  }

  .detail-section h2 {
    margin: 0 0 1rem 0;
    font-size: 1.3rem;
    color: var(--an-cyan, #69f5ff);
    border-bottom: 2px solid rgba(105, 245, 255, 0.3);
    padding-bottom: 0.5rem;
  }

  .detail-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1.5rem;
  }

  .detail-item label {
    display: block;
    font-size: 0.85rem;
    color: var(--an-cyan, #69f5ff);
    margin-bottom: 0.5rem;
    opacity: 0.8;
  }

  .detail-item p {
    margin: 0;
    font-size: 1.1rem;
    color: var(--an-white, #e7e6e2);
  }

  .scope-form {
    background: var(--bg-secondary, rgba(255, 255, 255, 0.05));
    padding: 2rem;
    border-radius: 8px;
  }

  .form-group {
    margin-bottom: 1.5rem;
  }

  .form-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1rem;
  }

  .form-group label {
    display: block;
    margin-bottom: 0.5rem;
    font-weight: 600;
    color: var(--an-cyan, #69f5ff);
  }

  .form-group input,
  .form-group select {
    width: 100%;
    padding: 0.75rem;
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 4px;
    background: rgba(0, 0, 0, 0.2);
    color: var(--an-white, #e7e6e2);
    font-size: 1rem;
    font-family: inherit;
  }

  .form-group input:focus,
  .form-group select:focus {
    outline: none;
    border-color: var(--an-cyan, #69f5ff);
  }

  .form-group small {
    display: block;
    margin-top: 0.25rem;
    font-size: 0.85rem;
    opacity: 0.7;
  }

  .unit-input {
    display: flex;
    gap: 0.5rem;
  }

  .unit-input input {
    flex: 1;
  }

  .unit-input select {
    width: 100px;
  }

  .form-actions {
    display: flex;
    gap: 1rem;
    margin-top: 2rem;
  }

  .button {
    padding: 0.75rem 1.5rem;
    border: none;
    border-radius: 4px;
    font-size: 1rem;
    font-weight: 600;
    cursor: pointer;
    text-decoration: none;
    display: inline-block;
    text-align: center;
    transition: background 0.2s;
  }

  .button.primary {
    background: var(--an-pink, #ff2dbe);
    color: white;
  }

  .button.primary:hover {
    background: #e01ba5;
  }

  .button.secondary {
    background: rgba(255, 255, 255, 0.1);
    color: var(--an-white, #e7e6e2);
  }

  .button.secondary:hover {
    background: rgba(255, 255, 255, 0.2);
  }

  .error-message {
    padding: 1rem;
    margin-top: 1rem;
    background: rgba(220, 53, 69, 0.2);
    border: 1px solid #dc3545;
    border-radius: 4px;
    color: #ff6b7a;
  }

  .success-message {
    padding: 1rem;
    margin-top: 1rem;
    background: rgba(40, 167, 69, 0.2);
    border: 1px solid #28a745;
    border-radius: 4px;
    color: #6fdc8c;
  }

  @media (max-width: 600px) {
    .form-row {
      grid-template-columns: 1fr;
    }
    
    .detail-grid {
      grid-template-columns: 1fr;
    }
    
    .scope-header {
      flex-direction: column;
      align-items: flex-start;
    }
  }
</style>

<script define:vars={{ scopeId: id }}>
  // Wait for DOM to be ready
  let form = null;
  let loadingDiv = null;
  let errorDiv = null;
  let successDiv = null;
  let nodeStatusDiv = null;
  let statusDot = null;
  let statusText = null;
  let scopeDetails = null;
  let editBtn = null;
  let cancelEditBtn = null;
  let cancelFormBtn = null;
  let currentScope = null;
  let pollInterval = null;

  function initElements() {
    form = document.getElementById('scope-form');
    loadingDiv = document.getElementById('loading');
    errorDiv = document.getElementById('form-error');
    successDiv = document.getElementById('form-success');
    nodeStatusDiv = document.getElementById('node-status');
    statusDot = document.getElementById('status-dot');
    statusText = document.getElementById('status-text');
    scopeDetails = document.getElementById('scope-details');
    editBtn = document.getElementById('edit-btn');
    cancelEditBtn = document.getElementById('cancel-edit-btn');
    cancelFormBtn = document.getElementById('cancel-form-btn');
  }

  function formatTimeAgo(date) {
    const now = new Date();
    const diffMs = now.getTime() - date.getTime();
    const diffSeconds = Math.floor(diffMs / 1000);
    const diffMinutes = Math.floor(diffSeconds / 60);
    const diffHours = Math.floor(diffMinutes / 60);
    const diffDays = Math.floor(diffHours / 24);

    if (diffSeconds < 60) {
      return `${diffSeconds}s ago`;
    } else if (diffMinutes < 60) {
      return `${diffMinutes}m ago`;
    } else if (diffHours < 24) {
      return `${diffHours}h ago`;
    } else {
      return `${diffDays}d ago`;
    }
  }

  function formatDishSize(mm) {
    const inches = (mm / 25.4).toFixed(1);
    return `${mm.toFixed(0)} mm (${inches}")`;
  }

  function updateNodeStatus(scope) {
    if (!nodeStatusDiv || !statusDot || !statusText) {
      return;
    }

    if (!scope || !scope.lastHeartbeatAt) {
      nodeStatusDiv.style.display = 'none';
      return;
    }

    const lastHeartbeat = new Date(scope.lastHeartbeatAt);
    if (isNaN(lastHeartbeat.getTime())) {
      nodeStatusDiv.style.display = 'none';
      return;
    }

    const now = new Date();
    const diffSeconds = Math.floor((now.getTime() - lastHeartbeat.getTime()) / 1000);

    let statusClass = 'red';
    if (diffSeconds <= 60) {
      statusClass = 'green';
    } else if (diffSeconds <= 300) {
      statusClass = 'yellow';
    }

    statusDot.className = `status-dot ${statusClass}`;

    const timeAgo = formatTimeAgo(lastHeartbeat);
    let statusLine = `${scope.name}`;
    
    if (scope.lastRunIndex !== undefined && scope.totalRuns !== undefined) {
      statusLine += ` — Run ${scope.lastRunIndex} / ${scope.totalRuns}`;
    } else if (scope.lastRunIndex !== undefined) {
      statusLine += ` — Run ${scope.lastRunIndex}`;
    }
    
    statusLine += ` — Last seen ${timeAgo}`;
    
    statusText.textContent = statusLine;
    nodeStatusDiv.style.display = 'block';
  }

  function showDetails(scope) {
    currentScope = scope;
    
    // Update header
    document.getElementById('scope-name').textContent = scope.name;
    
    // Update details view
    document.getElementById('detail-latitude').textContent = scope.latitude.toFixed(6) + '°';
    document.getElementById('detail-longitude').textContent = scope.longitude.toFixed(6) + '°';
    document.getElementById('detail-country').textContent = scope.country || '-';
    document.getElementById('detail-dish-size').textContent = formatDishSize(scope.dishSizeMm);
    
    // Update heartbeat info if available
    const heartbeatSection = document.getElementById('heartbeat-section');
    if (scope.lastRunIndex !== undefined || scope.lastCapture) {
      heartbeatSection.style.display = 'block';
      let runInfo = '-';
      if (scope.lastRunIndex !== undefined && scope.totalRuns !== undefined) {
        runInfo = `Run ${scope.lastRunIndex} / ${scope.totalRuns}`;
      } else if (scope.lastRunIndex !== undefined) {
        runInfo = `Run ${scope.lastRunIndex}`;
      }
      document.getElementById('detail-run-info').textContent = runInfo;
      document.getElementById('detail-last-capture').textContent = scope.lastCapture || '-';
    } else {
      heartbeatSection.style.display = 'none';
    }
    
    // Show details, hide form
    if (scopeDetails) scopeDetails.style.display = 'block';
    if (form) form.style.display = 'none';
    if (editBtn) editBtn.style.display = 'inline-block';
    if (cancelEditBtn) cancelEditBtn.style.display = 'none';
    
    // Update status
    updateNodeStatus(scope);
  }

  function enterEditMode() {
    if (!currentScope) return;
    
    // Stop polling when entering edit mode
    stopPolling();
    
    // Populate form
    document.getElementById('name').value = currentScope.name || '';
    document.getElementById('latitude').value = currentScope.latitude || '';
    document.getElementById('longitude').value = currentScope.longitude || '';
    document.getElementById('dishSize').value = currentScope.dishSizeMm || '';
    document.getElementById('dishUnit').value = 'mm';
    
    // Show form, hide details
    if (scopeDetails) scopeDetails.style.display = 'none';
    if (form) form.style.display = 'block';
    if (editBtn) editBtn.style.display = 'none';
    if (cancelEditBtn) cancelEditBtn.style.display = 'inline-block';
  }

  function exitEditMode() {
    // Show details, hide form
    if (scopeDetails) scopeDetails.style.display = 'block';
    if (form) form.style.display = 'none';
    if (editBtn) editBtn.style.display = 'inline-block';
    if (cancelEditBtn) cancelEditBtn.style.display = 'none';
    
    // Clear form errors
    if (errorDiv) errorDiv.style.display = 'none';
    if (successDiv) successDiv.style.display = 'none';
    
    // Resume polling when exiting edit mode
    startPolling();
  }

  function startPolling() {
    // Stop any existing polling
    stopPolling();
    
    // Only poll if we're in view mode (details are visible)
    if (scopeDetails && scopeDetails.style.display !== 'none') {
      // Poll every 10 seconds
      pollInterval = setInterval(() => {
        loadScope(true); // Pass true to indicate this is a poll (silent update)
      }, 10000);
    }
  }

  function stopPolling() {
    if (pollInterval) {
      clearInterval(pollInterval);
      pollInterval = null;
    }
  }

  async function loadScope(isPoll = false) {
    if (!scopeId) {
      if (loadingDiv && !isPoll) {
        loadingDiv.textContent = 'Error: No scope ID';
      }
      return;
    }

    try {
      const response = await fetch(`/api/scopes/${scopeId}`);
      
      if (!response.ok) {
        const errorData = await response.json().catch(() => ({ error: 'Unknown error' }));
        throw new Error(errorData.error || `HTTP ${response.status}`);
      }
      
      const data = await response.json();

      if (!data.scope) {
        throw new Error('Scope data not found in response');
      }

      const scope = data.scope;
      showDetails(scope);

      if (loadingDiv && !isPoll) {
        loadingDiv.style.display = 'none';
      }
      
      // Start polling after initial load (only if not already polling)
      if (!isPoll && !pollInterval) {
        startPolling();
      }
    } catch (error) {
      console.error('Error loading scope:', error);
      if (loadingDiv && !isPoll) {
        loadingDiv.textContent = `Error: ${error.message}`;
      }
      // Stop polling on error
      stopPolling();
    }
  }

  // Initialize when DOM is ready
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', () => {
      initElements();
      setupForm();
      loadScope();
    });
  } else {
    initElements();
    setupForm();
    loadScope();
  }

  // Cleanup: stop polling when page is unloaded
  window.addEventListener('beforeunload', () => {
    stopPolling();
  });

  function setupForm() {
    editBtn?.addEventListener('click', enterEditMode);
    cancelEditBtn?.addEventListener('click', exitEditMode);
    cancelFormBtn?.addEventListener('click', exitEditMode);
    
    form?.addEventListener('submit', async (e) => {
      e.preventDefault();

      if (errorDiv) errorDiv.style.display = 'none';
      if (successDiv) successDiv.style.display = 'none';

      const formData = new FormData(form);
      const data = {
        name: formData.get('name'),
        latitude: formData.get('latitude'),
        longitude: formData.get('longitude'),
        dishSize: formData.get('dishSize'),
        dishUnit: formData.get('dishUnit'),
      };

      try {
        const response = await fetch(`/api/scopes/${scopeId}`, {
          method: 'PUT',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify(data),
        });

        const result = await response.json();

        if (response.ok) {
          // Reload scope data (this will start polling again)
          await loadScope();
          exitEditMode();
          
          if (successDiv) {
            successDiv.textContent = 'Scope updated successfully!';
            successDiv.style.display = 'block';
            setTimeout(() => {
              if (successDiv) successDiv.style.display = 'none';
            }, 3000);
          }
        } else {
          if (errorDiv) {
            errorDiv.textContent = result.error || 'Failed to update scope';
            errorDiv.style.display = 'block';
          }
        }
      } catch (error) {
        console.error('Error:', error);
        if (errorDiv) {
          errorDiv.textContent = 'Network error. Please try again.';
          errorDiv.style.display = 'block';
        }
      }
    });
  }
</script>
