---
import Layout from "../../components/Layout.astro";
import { getUser } from "../../lib/auth";

// Check authentication
const user = await getUser(Astro.request);

if (!user) {
  return Astro.redirect('/api/auth/login');
}

const { id } = Astro.params;
---

<Layout title="Edit Scope – AstroN00b">
  <div class="scope-form-container">
    <h1>Edit Scope</h1>
    
    <div id="node-status" class="node-status" style="display: none;">
      <div class="status-indicator">
        <span class="status-dot" id="status-dot"></span>
        <span id="status-text" class="status-text"></span>
      </div>
    </div>
    
    <div id="loading">Loading scope...</div>
    
    <form id="scope-form" class="scope-form" style="display: none;">
      <div class="form-group">
        <label for="name">Scope Name *</label>
        <input 
          type="text" 
          id="name" 
          name="name" 
          required 
          placeholder="e.g., My Backyard Dish"
        />
      </div>

      <div class="form-row">
        <div class="form-group">
          <label for="latitude">Latitude (°) *</label>
          <input 
            type="number" 
            id="latitude" 
            name="latitude" 
            step="0.000001" 
            min="-90" 
            max="90" 
            required
          />
        </div>

        <div class="form-group">
          <label for="longitude">Longitude (° East) *</label>
          <input 
            type="number" 
            id="longitude" 
            name="longitude" 
            step="0.000001" 
            min="-180" 
            max="180" 
            required
          />
        </div>
      </div>

      <div class="form-group">
        <label for="dishSize">Dish Diameter *</label>
        <div class="unit-input">
          <input 
            type="number" 
            id="dishSize" 
            name="dishSize" 
            step="any"
            min="0.1" 
            required
          />
          <select id="dishUnit" name="dishUnit">
            <option value="mm">mm</option>
            <option value="inches">inches</option>
          </select>
        </div>
        <small>Enter the diameter of your dish antenna</small>
      </div>

      <div class="form-actions">
        <button type="submit" class="button primary">Save Changes</button>
        <a href="/dashboard" class="button secondary">Cancel</a>
      </div>

      <div id="form-error" class="error-message" style="display: none;"></div>
      <div id="form-success" class="success-message" style="display: none;"></div>
    </form>
  </div>
</Layout>

<style>
  .scope-form-container {
    max-width: 600px;
    margin: 0 auto;
  }

  .scope-form {
    background: var(--bg-secondary, rgba(255, 255, 255, 0.05));
    padding: 2rem;
    border-radius: 8px;
  }

  .form-group {
    margin-bottom: 1.5rem;
  }

  .form-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1rem;
  }

  .form-group label {
    display: block;
    margin-bottom: 0.5rem;
    font-weight: 600;
    color: var(--an-cyan, #69f5ff);
  }

  .form-group input,
  .form-group select {
    width: 100%;
    padding: 0.75rem;
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 4px;
    background: rgba(0, 0, 0, 0.2);
    color: var(--an-white, #e7e6e2);
    font-size: 1rem;
    font-family: inherit;
  }

  .form-group input:focus,
  .form-group select:focus {
    outline: none;
    border-color: var(--an-cyan, #69f5ff);
  }

  .form-group small {
    display: block;
    margin-top: 0.25rem;
    font-size: 0.85rem;
    opacity: 0.7;
  }

  .unit-input {
    display: flex;
    gap: 0.5rem;
  }

  .unit-input input {
    flex: 1;
  }

  .unit-input select {
    width: 100px;
  }

  .form-actions {
    display: flex;
    gap: 1rem;
    margin-top: 2rem;
  }

  .button {
    padding: 0.75rem 1.5rem;
    border: none;
    border-radius: 4px;
    font-size: 1rem;
    font-weight: 600;
    cursor: pointer;
    text-decoration: none;
    display: inline-block;
    text-align: center;
    transition: background 0.2s;
  }

  .button.primary {
    background: var(--an-pink, #ff2dbe);
    color: white;
  }

  .button.primary:hover {
    background: #e01ba5;
  }

  .button.secondary {
    background: rgba(255, 255, 255, 0.1);
    color: var(--an-white, #e7e6e2);
  }

  .button.secondary:hover {
    background: rgba(255, 255, 255, 0.2);
  }

  .error-message {
    padding: 1rem;
    margin-top: 1rem;
    background: rgba(220, 53, 69, 0.2);
    border: 1px solid #dc3545;
    border-radius: 4px;
    color: #ff6b7a;
  }

  .success-message {
    padding: 1rem;
    margin-top: 1rem;
    background: rgba(40, 167, 69, 0.2);
    border: 1px solid #28a745;
    border-radius: 4px;
    color: #6fdc8c;
  }

  .node-status {
    background: var(--bg-secondary, rgba(255, 255, 255, 0.05));
    padding: 1rem 1.5rem;
    border-radius: 8px;
    margin-bottom: 1.5rem;
  }

  .status-indicator {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .status-dot {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    display: inline-block;
    flex-shrink: 0;
  }

  .status-dot.green {
    background-color: #28a745;
    box-shadow: 0 0 8px rgba(40, 167, 69, 0.6);
  }

  .status-dot.yellow {
    background-color: #ffc107;
    box-shadow: 0 0 8px rgba(255, 193, 7, 0.6);
  }

  .status-dot.red {
    background-color: #dc3545;
    box-shadow: 0 0 8px rgba(220, 53, 69, 0.6);
  }

  .status-text {
    color: var(--an-white, #e7e6e2);
    font-size: 1rem;
  }

  @media (max-width: 600px) {
    .form-row {
      grid-template-columns: 1fr;
    }
  }
</style>

<script define:vars={{ scopeId: id }}>
  // Wait for DOM to be ready
  let form = null;
  let loadingDiv = null;
  let errorDiv = null;
  let successDiv = null;
  let nodeStatusDiv = null;
  let statusDot = null;
  let statusText = null;

  function initElements() {
    form = document.getElementById('scope-form');
    loadingDiv = document.getElementById('loading');
    errorDiv = document.getElementById('form-error');
    successDiv = document.getElementById('form-success');
    nodeStatusDiv = document.getElementById('node-status');
    statusDot = document.getElementById('status-dot');
    statusText = document.getElementById('status-text');
  }

  function formatTimeAgo(date) {
    const now = new Date();
    const diffMs = now.getTime() - date.getTime();
    const diffSeconds = Math.floor(diffMs / 1000);
    const diffMinutes = Math.floor(diffSeconds / 60);
    const diffHours = Math.floor(diffMinutes / 60);
    const diffDays = Math.floor(diffHours / 24);

    if (diffSeconds < 60) {
      return `${diffSeconds}s ago`;
    } else if (diffMinutes < 60) {
      return `${diffMinutes}m ago`;
    } else if (diffHours < 24) {
      return `${diffHours}h ago`;
    } else {
      return `${diffDays}d ago`;
    }
  }

  function updateNodeStatus(scope) {
    if (!nodeStatusDiv || !statusDot || !statusText) {
      console.warn('Status elements not found, skipping status update');
      return;
    }

    if (!scope) {
      console.warn('No scope data provided to updateNodeStatus');
      return;
    }

    console.log('Updating node status for scope:', scope);
    console.log('lastHeartbeatAt:', scope.lastHeartbeatAt);

    if (!scope.lastHeartbeatAt) {
      // No heartbeat data yet
      console.log('No heartbeat data found, hiding status');
      nodeStatusDiv.style.display = 'none';
      return;
    }

    // Handle MongoDB date serialization (comes as ISO string in JSON)
    const lastHeartbeat = new Date(scope.lastHeartbeatAt);
    if (isNaN(lastHeartbeat.getTime())) {
      console.error('Invalid date:', scope.lastHeartbeatAt);
      nodeStatusDiv.style.display = 'none';
      return;
    }

    const now = new Date();
    const diffSeconds = Math.floor((now.getTime() - lastHeartbeat.getTime()) / 1000);
    console.log('Time since last heartbeat:', diffSeconds, 'seconds');

    // Determine status color
    let statusClass = 'red';
    if (diffSeconds <= 60) {
      statusClass = 'green';
    } else if (diffSeconds <= 300) { // 5 minutes
      statusClass = 'yellow';
    }

    statusDot.className = `status-dot ${statusClass}`;

    // Build status text
    const timeAgo = formatTimeAgo(lastHeartbeat);
    let statusLine = `${scope.name}`;
    
    if (scope.lastRunIndex !== undefined && scope.totalRuns !== undefined) {
      statusLine += ` — Run ${scope.lastRunIndex} / ${scope.totalRuns}`;
    } else if (scope.lastRunIndex !== undefined) {
      statusLine += ` — Run ${scope.lastRunIndex}`;
    }
    
    statusLine += ` — Last seen ${timeAgo}`;
    
    statusText.textContent = statusLine;
    nodeStatusDiv.style.display = 'block';
  }

  async function loadScope() {
    if (!scopeId) {
      console.error('No scope ID provided');
      if (loadingDiv) {
        loadingDiv.textContent = 'Error: No scope ID';
      }
      return;
    }

    try {
      console.log('Loading scope:', scopeId);
      const response = await fetch(`/api/scopes/${scopeId}`);
      
      if (!response.ok) {
        const errorData = await response.json().catch(() => ({ error: 'Unknown error' }));
        throw new Error(errorData.error || `HTTP ${response.status}`);
      }
      
      const data = await response.json();

      if (!response.ok) {
        throw new Error(data.error || 'Failed to load scope');
      }

      if (!data.scope) {
        throw new Error('Scope data not found in response');
      }

      const scope = data.scope;
      console.log('Loaded scope data:', scope);
      console.log('Scope heartbeat fields:', {
        lastHeartbeatAt: scope.lastHeartbeatAt,
        lastRunIndex: scope.lastRunIndex,
        totalRuns: scope.totalRuns,
        lastCapture: scope.lastCapture
      });

      // Update node status display
      updateNodeStatus(scope);

      // Populate form
      const nameInput = document.getElementById('name');
      const latInput = document.getElementById('latitude');
      const lonInput = document.getElementById('longitude');
      const dishSizeInput = document.getElementById('dishSize');
      const dishUnitSelect = document.getElementById('dishUnit');

      if (nameInput) nameInput.value = scope.name || '';
      if (latInput) latInput.value = scope.latitude?.toString() || '';
      if (lonInput) lonInput.value = scope.longitude?.toString() || '';
      if (dishSizeInput) dishSizeInput.value = scope.dishSizeMm?.toString() || '';
      if (dishUnitSelect) dishUnitSelect.value = 'mm';

      if (loadingDiv) loadingDiv.style.display = 'none';
      if (form) form.style.display = 'block';
    } catch (error) {
      console.error('Error loading scope:', error);
      if (loadingDiv) {
        loadingDiv.textContent = `Error: ${error.message}`;
      }
    }
  }

  // Initialize when DOM is ready
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', () => {
      initElements();
      setupForm();
      loadScope();
    });
  } else {
    initElements();
    setupForm();
    loadScope();
  }

  function setupForm() {
    form?.addEventListener('submit', async (e) => {
      e.preventDefault();

    if (errorDiv) errorDiv.style.display = 'none';
    if (successDiv) successDiv.style.display = 'none';

    const formData = new FormData(form);
    const data = {
      name: formData.get('name'),
      latitude: formData.get('latitude'),
      longitude: formData.get('longitude'),
      dishSize: formData.get('dishSize'),
      dishUnit: formData.get('dishUnit'),
    };

    try {
      const response = await fetch(`/api/scopes/${scopeId}`, {
        method: 'PUT',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify(data),
      });

      const result = await response.json();

      if (response.ok) {
        if (successDiv) {
          successDiv.textContent = 'Scope updated successfully! Redirecting...';
          successDiv.style.display = 'block';
        }
        setTimeout(() => {
          window.location.href = '/dashboard';
        }, 1000);
      } else {
        if (errorDiv) {
          errorDiv.textContent = result.error || 'Failed to update scope';
          errorDiv.style.display = 'block';
        }
      }
    } catch (error) {
      console.error('Error:', error);
      if (errorDiv) {
        errorDiv.textContent = 'Network error. Please try again.';
        errorDiv.style.display = 'block';
      }
    }
  });
  }
</script>

