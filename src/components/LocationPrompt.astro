---
import locationPromptScriptUrl from "../scripts/locationPrompt.js?url";
---

<div class="location-prompt-modal" data-component="location-prompt" style="display: none;">
  <div class="modal-backdrop"></div>
  <div class="modal-content">
    <h2>Set Your Location</h2>
    <p>To show what's visible from your location, we need your coordinates.</p>
    <form class="location-form">
      <label>
        Latitude (°)
        <input type="number" name="latitude" step="0.00001" min="-90" max="90" placeholder="e.g., 51.50732" />
      </label>
      <label>
        Longitude (° East)
        <input type="number" name="longitude" step="0.00001" min="-180" max="180" placeholder="e.g., -0.12765" />
      </label>
      <div class="modal-actions">
        <button type="button" data-action="useLocation">Use my location</button>
        <button type="submit">Save Location</button>
      </div>
      <span class="status-message" data-field="status"></span>
    </form>
  </div>
</div>

<script type="module" src={locationPromptScriptUrl}></script>

<style>
  .location-prompt-modal {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 1000;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .modal-backdrop {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.75);
    backdrop-filter: blur(4px);
  }

  .modal-content {
    position: relative;
    background: var(--an-navy);
    border: 2px solid var(--an-blue);
    border-radius: 0.75rem;
    padding: 2rem;
    max-width: 500px;
    width: 90%;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.5);
    z-index: 1001;
  }

  .modal-content h2 {
    font-family: var(--an-font-pixel);
    color: var(--an-cyan);
    font-size: 1.2rem;
    margin-bottom: 0.5rem;
  }

  .modal-content p {
    color: var(--an-grey);
    margin-bottom: 1.5rem;
    font-size: 0.95rem;
  }

  .location-form {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .location-form label {
    display: flex;
    flex-direction: column;
    gap: 0.4rem;
    font-size: 0.95rem;
  }

  .location-form input {
    padding: 0.6rem;
    border-radius: 0.4rem;
    border: 1px solid rgba(255, 255, 255, 0.2);
    background: rgba(255, 255, 255, 0.05);
    color: var(--an-white);
    font-family: var(--an-font-body);
  }

  .location-form input:focus {
    outline: none;
    border-color: var(--an-cyan);
    box-shadow: 0 0 0 2px rgba(105, 245, 255, 0.2);
  }

  .modal-actions {
    display: flex;
    gap: 1rem;
    margin-top: 0.5rem;
  }

  .modal-actions button {
    flex: 1;
    padding: 0.7rem 1.2rem;
    border-radius: 0.5rem;
    border: none;
    font-family: var(--an-font-body);
    font-weight: 600;
    cursor: pointer;
    transition: all 0.2s ease;
  }

  .modal-actions button[data-action="useLocation"] {
    background: transparent;
    border: 1px solid var(--an-pink);
    color: var(--an-pink);
  }

  .modal-actions button[data-action="useLocation"]:hover {
    background: var(--an-pink);
    color: var(--an-navy);
  }

  .modal-actions button[type="submit"] {
    background: var(--an-cyan);
    color: var(--an-navy);
  }

  .modal-actions button[type="submit"]:hover {
    background: var(--an-white);
  }

  .status-message {
    display: block;
    margin-top: 0.5rem;
    font-size: 0.85rem;
    color: var(--an-grey);
    min-height: 1.2rem;
  }

  .status-message.error {
    color: var(--an-pink);
  }
</style>

